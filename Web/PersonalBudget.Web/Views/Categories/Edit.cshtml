@model PersonalBudget.Web.ViewModels.Categories.EditViewModel

@using PersonalBudget.Data.Models

@{
    this.ViewData["Title"] = "Edit category";

}


<div class="section_create">
    <div class="row ml-3 ml-md-0">
        <h2><i class="fas fa-network-wired"></i> Редактирай категория</h2>
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger col-4 ml-0 mt-5"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ItemTypes"></label>
            <select asp-for="ItemTypes" class="form-control" asp-items="@Html.GetEnumSelectList<ItemType>()">
                <option selected="">Изберете тип</option>
            </select>
            <span asp-validation-for="ItemTypes" class="text-danger"></span>
        </div>
        <button type="submit" class="btn_save float-right mt-5"><i class="far fa-save"></i> Запази</button>
    </form>
</div>

@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>

}

