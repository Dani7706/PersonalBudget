@model CreateFinanceInstitutionInputModel


@{
    this.ViewData["Title"] = "Add new finance institution";
    var financeTypes = this.Model.FinanceTypes.Select(x => new SelectListItem(x.Value, x.Key));
}
<div class="section_create">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger col-4 ml-0 font-weight-bold"></div>

    <h2 class=""><i class="fas fa-landmark"></i> Финансова институция</h2>
    <form method="post"  class="">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FinanceTypeId"></label>
            <select asp-for="FinanceTypeId" class="form-control" asp-items="financeTypes">
                <option selected="">Изберете финансов тип</option>
            </select>

            <span asp-validation-for="FinanceTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Capital"></label>
            <input asp-for="Capital" class="form-control" />
            <span asp-validation-for="Capital" class="text-danger"></span>
        </div>
        <button type="submit" class="btn_save float-right"><i class="far fa-save"></i> Запази</button>
    </form>
</div>
