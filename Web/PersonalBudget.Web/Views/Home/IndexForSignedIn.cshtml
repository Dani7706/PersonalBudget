@model PersonalBudget.Web.ViewModels.Home.HomePageViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    this.ViewData["Title"] = "Home Page";
}

@if (this.SignInManager.IsSignedIn(this.User))
{
    <div class="section-index_signedIn">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner rounded p-3">
                <div class="carousel-item active">
                    <img class="d-block w-100 rounded" src="/resources/Slide1-2.svg" alt="">

                    <div class="carousel-caption d-none d-md-block">
                        @foreach (var institution in Model.FinanceInstitutions)
                        {
                            <div class="justify-content-center">
                                <h2 class="text-center text-danger">@institution.Name - @institution.Capital лв.</h2>
                            </div>
                        }

                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/resources/Slide2.svg" alt="Приходи за месеца: @Model.AllIncomes">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 class="text-center text-danger">Приходи за месеца: @Model.AllIncomes лв.</h2>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 class="text-center text-danger">Разходи за месеца: @Model.AllCosts лв.</h2>
                    </div>
                    <img class="d-block w-100" src="/resources/Slide3.svg" alt="Разходи за месеца: @Model.AllCosts">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

}





