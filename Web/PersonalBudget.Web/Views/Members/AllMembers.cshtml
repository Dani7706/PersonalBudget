@model PersonalBudget.Web.ViewModels.Members.AllMembersViewModel

@{
    this.ViewData["Title"] = "All members";
    int i = 1;
}



<div class="section-all">
    @if (this.TempData.ContainsKey("Message"))
    {
        <div class="alert alert-success"><i class="fas fa-check-circle"></i> @this.TempData["Message"]</div>
    }
    <div class="row justify-content-around">
        <h2 class="m-0 text-white-50"><i class="fas fa-house-user"></i> Всички потребители</h2>
        <form method="get" class="m-0 mt-4 mt-md-0">
            <button asp-controller="Members" asp-action="CreateMember" class="btn btn-primary"><img src="~/resources/add.png" class="icon-add" /> Добави нов</button>
        </form>

    </div>
    <table class="table table-striped table-hover table-responsive-sm  mt-5">
        <thead>
            <tr class="">
                <th scope="col">#</th>
                <th scope="col">Име</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr class="">
                    <td>@i</td>
                    <td>@member.Name</td>
                    <td class="mt-2 pt-2 pb-2 pl-0 pr-0">
                        <form method="get" class="m-0">
                            <button class="btn_edit" asp-controller="Members" asp-action="Edit" asp-route-id="@member.Id"><i class="fas fa-edit"></i> Редактирай</button>

                        </form>
                    </td>
                    <td class="mt-2 pt-2 pb-2 pl-0 pr-0">
                        <form method="post" class="m-0">
                            <button class="btn_delete" asp-controller="Members" asp-action="Delete" asp-route-id="@member.Id" onclick="return confirm('Сигурен ли сте, че искате да изтриете този член на вашето семейство?');"><i class="far fa-trash-alt"></i> Изтрий</button>
                        </form>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>


</div>