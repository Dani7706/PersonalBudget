@model PersonalBudget.Web.ViewModels.Partners.CreatePartnerInputModel

@{
    this.ViewData["Title"] = "Create partner";
    var towns = Model.Towns.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="section_create">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger font-weight-bold"></div>
    <div class="row offset-2 offset-md-0">
        <h2><i class="far fa-handshake"></i> Добави контрагент</h2>

    </div>
    <br />
    <form action="" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TownId">
            </label>
            <select asp-for="TownId" asp-items="towns" class="form-control">
                <option>Изберете град</option>
            </select>
        </div>
        <button type="submit" class="btn_save  float-right"><i class="far fa-save"></i> Запази</button>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}