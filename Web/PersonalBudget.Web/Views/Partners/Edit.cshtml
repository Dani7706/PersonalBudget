@model PersonalBudget.Web.ViewModels.Partners.EditViewModel

@{
    this.ViewData["Title"] = "Edit partner";
    var towns = Model.Towns.Select(x => new SelectListItem(x.Value, x.Key));
}


<div class="section_create">
    <div class="row">
        <h2 class="text-white-50 offset-2  offset-md-1"><i class="far fa-handshake"></i> Редактирай контрагент</h2>

    </div>
    <br />
    <form action="" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TownId">
            </label>
            <select asp-for="TownId" asp-items="towns" class="form-control">
                <option>Изберете град</option>
            </select>
        </div>
        <button type="submit" class="btn_save  float-right"><i class="far fa-save"></i> Запази</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}