                        </li>
                        <li class="nav-item mt-2">
                            <a role="menuitem" class="nav-text " asp-controller="About" asp-action="Index">За приложението</a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class=" nav-text" asp-area="" asp-controller="Contacts" asp-action="Index">Контакти</a>
                        </li>
                        

                    </ul>

                </div>
                <form method="get" class="m-0">
                    <button class="btn_addToBasket" onclick="javascript: return openShoppingCart()"><i class="fas fa-shopping-cart"></i></button>
                </form>
            </div>
        </nav>
    </header>
    <partial name="_CookieConsentPartial" />

    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <aside>
            <vc:expire-products></vc:expire-products>

        </aside>

    }
    <main role="main">
        @this.RenderBody()
    </main>



    <footer class="footer text-muted">
        
           
        <div class="row  section-all--big footer-nav">
            <div class="col col-lg-2">
                <p class="footer-p m-0">Инвентар</p>
