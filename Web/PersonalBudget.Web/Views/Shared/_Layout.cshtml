                    <li>
                        <a role="menuitem" class="footer-link" asp-area="Reports" asp-controller="IncomesBySubcategories" asp-action="All">Приходи групирани</a>
                    </li>
                    <li>
                        <a role="menuitem" class="footer-link" asp-area="Reports" asp-controller="CostsBySubcategories" asp-action="All">Разходи групирани</a>
