                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle nav-text pl-2 pr-2" id="transferMenu" data-toggle="dropdown">Отчети</button>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="transferMenu" id="submenu">
                                    <li role="presentation">
                                        <a role="menuitem" class="nav-text pl-2" asp-area="Reports" asp-controller="Costs" asp-action="All">Разходи</a>
                                    </li>
                                    <li role="presentation">
                                        <a role="menuitem" class="nav-text pl-2" asp-area="Reports" asp-controller="Incomes" asp-action="All">Приходи</a>
                                    </li>
                                    <li role="presentation">
                                        <a role="menuitem" class="nav-text pl-2" asp-area="Reports" asp-controller="CostsBySubcategories" asp-action="All">Разходи по подкатегории</a>
                                    </li>
                                    <li role="presentation">
                                        <a role="menuitem" class="nav-text pl-2" asp-area="Reports" asp-controller="IncomesBySubcategories" asp-action="All">Приходи по подкатегории</a>
                                    </li>
                                    <li role="presentation">
                                        <a role="menuitem" class="nav-text pl-2" asp-area="Reports" asp-controller="IncomesCosts" asp-action="All">Приходи и разходи</a>
                                    </li>
