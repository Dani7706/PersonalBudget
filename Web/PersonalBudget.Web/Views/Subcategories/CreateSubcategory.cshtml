@model CreateSubcategoryInputModel


@{
    this.ViewData["Title"] = "Create subcategory";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
}
<div class="section_create">
    <div class="row text-white-50 ml-3">
        <h2><i class="fas fa-network-wired"></i> Създай подкатегория</h2>
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger col-4 font-weight-bold"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" id="subcategory" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="categories">
                <option selected="">Изберете категория</option>
            </select>
            <span asp-validation-for="Categories" class="text-danger"></span>
        </div>
        <button type="submit" class="btn_save  float-right"><i class="far fa-save"></i> Запази</button>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
