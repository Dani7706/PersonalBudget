@model CreateSubcategoryInputModel

@{
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
}
<div class="">
    <div class="row text-white-50">
        <img src="/resources/noun_Subcategory_929019.svg" alt="Subcategory icon" class="icon" />
        <h2>Създай подкатегория</h2>
    </div>
    <form method="post" asp-action="CreateSubcategory" asp-controller="Subcategories">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="categories">
                <option selected="">Изберете категория</option>
            </select>
            <span asp-validation-for="Categories" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary float-right mt-5" value="Запази" />
        <button class="btn btn-primary" onclick="CloseEvent()">Close</button>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}

