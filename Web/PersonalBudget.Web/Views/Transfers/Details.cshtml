@model PersonalBudget.Web.ViewModels.TransferViewModels.Details

@{
    this.ViewData["Title"] = "Details";
}  

<div class="section-all--big">


    <form method="post">
        <div class="row col-12 col-md-10 ml-lg-4 mr-4">
            <div class="form-group float-right mr-0">
                <label>Общо сума: @Model.TotalMoney</label>

            </div>
        </div>

        <div class="row  ml-1 mr-4">
            <fieldset class="col-12 col-md-10 justify-content-between ml-lg-5 pb-4">
                <legend class="ml-2 col-6 col-lg-2 text-white-50">Данни</legend>

                <div class="row">

                    <div class="form-group col-lg-2 col-12 m-0">
                        <label>№: @Model.Id</label>
                    </div>
                    <div class="form-group col-lg-2 col-12 m-0">
                        <label>Вид трансфер: @Model.TransferType</label>

                    </div>
                    <div class="form-group col-lg-3 col-12 m-0">
                        <label>Контрагент: @Model.PartnerName</label>

                    </div>
                    <div class="form-group col-lg-5 col-12 m-0">
                        <label>Дата: @Model.TransferDate</label>

                    </div>
                </div>

            </fieldset>

        </div>
        <div class="row ml-1 mr-4">
            <fieldset class="col-12 col-lg-10 col-md-10 justify-content-between ml-lg-5 pb-2">
                <legend class="ml-2 col-6 col-lg-2 text-white-50">Запис</legend>
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Продукт</th>
                            <th>Потребител</th>
                            <th>Мерна единица</th>
                            <th>Количество</th>
                            <th>Единична цена</th>
                            <th>Стойност</th>
                            <th>Срок на годност</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Records)
                        {

                            <tr>
                                <td>@record.ItemName</td>
                                <td>@record.MemberName</td>
                                <td>@record.MeasureUnitName</td>
                                <td>@record.Quantity</td>
                                <td>@record.UnitPrice</td>
                                <td>@record.ItemValue</td>
                                <td>@record.ExpireDate</td>
                            </tr>


                        }
                    </tbody>

                </table>



            </fieldset>

        </div>

      

        <div class="form-group col-lg-10 col-md-10 mt-3  mr-5 ml-md-0 ml-lg-5">
            <button class="btn_edit float-right" asp-controller="Transfers" asp-action="ById" asp-route-id="@Model.Id">Към справката</button>

        </div>
    </form>
</div>
